{
  "document": [
    {
      "type": "Definition",
      "label": "def:odd_integer",
      "header": "Definition",
      "definition": "An integer n is odd precisely if there exists an integer k such that n = 2k + 1."
    },
    {
      "type": "Theorem",
      "label": "thm:product_of_odds",
      "header": "Theorem",
      "hypothesis": [
        {
          "type": "assume_statement",
          "assumption": "m is an odd integer"
        },
        {
          "type": "assume_statement",
          "assumption": "n is an odd integer"
        }
      ],
      "claim": "m·n is odd.",
      "proof": {
        "type": "Proof",
        "claim_label": "thm:product_of_odds",
        "proof_steps": [
          {
            "type": "LogicalStepSequence",
            "items": [
              {
                "type": "assert_statement",
                "claim": "There exists k₁ ∈ ℤ such that m = 2k₁ + 1.",
                "results_used": [
                  {
                    "statement": "Definition of an odd integer.",
                    "target_identifier": "def:odd_integer"
                  }
                ],
                "internal_references": [
                  {
                    "target_identifier": "def:odd_integer"
                  }
                ]
              },
              {
                "type": "assert_statement",
                "claim": "There exists k₂ ∈ ℤ such that n = 2k₂ + 1.",
                "results_used": [
                  {
                    "statement": "Definition of an odd integer.",
                    "target_identifier": "def:odd_integer"
                  }
                ],
                "internal_references": [
                  {
                    "target_identifier": "def:odd_integer"
                  }
                ]
              },
              {
                "type": "let_statement",
                "variable_name": "p",
                "value": "m·n",
                "statement": "Define p = m·n."
              },
              {
                "type": "assert_statement",
                "claim": "p can be expressed in the form 2s + 1 for some integer s.",
                "calculation": {
                  "calculation_sequence": [
                    "p = (2k₁ + 1)(2k₂ + 1)",
                    "p = 4k₁k₂ + 2k₁ + 2k₂ + 1",
                    "p = 2(2k₁k₂ + k₁ + k₂) + 1"
                  ]
                }
              },
              {
                "type": "let_statement",
                "variable_name": "s",
                "value": "2k₁k₂ + k₁ + k₂",
                "statement": "Define s = 2k₁k₂ + k₁ + k₂."
              },
              {
                "type": "assert_statement",
                "claim": "s is an integer.",
                "proof_method": "Closure of integers under multiplication and addition."
              },
              {
                "type": "conclude_statement",
                "claim": "p is odd."
              }
            ]
          }
        ]
      }
    }
  ]
}